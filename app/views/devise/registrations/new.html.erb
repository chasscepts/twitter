<div class="user-form-container">

  <div class="user-form-inner">

    <h2 class="ps-3 text-primary">Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :firstname, required: true %>
        <%= f.input :lastname, required: true %>
        <%= f.input :username, required: true %>
        <%= f.input :email, required: true %>
        <%= f.input :password, required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
      </div>

      <div class="form-actions d-flex justify-content-end mt-5">
        <%= f.button :submit, "Sign up", class: 'btn btn-primary px-5' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
